<Page x:Class="ProjetImmo.WPF.DisplayStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetImmo.WPF"
      xmlns:model="clr-namespace:ProjetImmo.Core.Models.Enums;assembly=ProjetImmo.Core"
      Height="450" Width="800"
      Title="DisplayStatsPage">

    <!-- RESSOURCES : DANS APP.XAML -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300*" />
            <RowDefinition Height="150*" />
        </Grid.RowDefinitions>

        <!-- Grid contenant les Graphiques -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="350*" />
            </Grid.ColumnDefinitions>

            <!-- Graphique des Ventes -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*" />
                    <RowDefinition Height="250*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" />

                <!-- GRAPHIQUE VENTES Grid.Row="1" -->

            </Grid>

            <!-- Graphiques : Boutons -->
            <Grid Grid.Column="1"></Grid>

            <!-- Graphique des Locations -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*" />
                    <RowDefinition Height="250*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" />

                <!-- GRAPHIQUE VENTES Grid.Row="1" -->

            </Grid>

        </Grid>

        <!-- Grid affichant les données numériques -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400*" />
                <ColumnDefinition Width="400*" />
            </Grid.ColumnDefinitions>

            <!-- Chiffres actuels -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Chiffres actuels concernant les ventes -->
                <StackPanel Orientation="Vertical" Grid.Row="0">

                    <Label ContentStringFormat="Nombre de biens à la vente actuellement : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentSales.Count"/>
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Maisons : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentSalesDetails[(model:EstateType)HOUSE]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Appartements : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentSalesDetails[(model:EstateType)FLAT]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Locaux Commerciaux : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentSalesDetails[(model:EstateType)COMMERCIAL]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Garages : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentSalesDetails[(model:EstateType)GARAGE]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Terrains : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentSalesDetails[(model:EstateType)FIELD]" />
                        </Label.Content>
                    </Label>

                </StackPanel>

                <!-- Chiffres actuels concernant les locations -->
                <StackPanel Orientation="Vertical" Grid.Row="1">

                    <Label ContentStringFormat="Nombre de biens à la location actuellement : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentRentals.Count"/>
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Maisons : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentRentalsDetails[(model:EstateType)HOUSE]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Appartements : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentRentalsDetails[(model:EstateType)FLAT]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Locaux Commerciaux : {0}">
                        <Label.Content>
                            <Binding Path="CurrentRentalsDetails[(model:EstateType)COMMERCIAL]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Garages : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentRentalsDetails[(model:EstateType)GARAGE]" />
                        </Label.Content>
                    </Label>

                    <Label ContentStringFormat="Terrains : {0}" Style="{StaticResource CurrentDetailsLabel}">
                        <Label.Content>
                            <Binding Path="CurrentRentalsDetails[(model:EstateType)FIELD]" />
                        </Label.Content>
                    </Label>

                </StackPanel>

            </Grid>

            <!-- Tableau des chiffres -->
            <Grid Grid.Column="2">



            </Grid>

        </Grid>



    </Grid>
</Page>