<Page x:Class="ProjetImmo.WPF.DisplayStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetImmo.WPF"
      Height="450" Width="800"
      Title="DisplayStatsPage">

    <!-- RESSOURCES : DANS APP.XAML -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300*" />
            <RowDefinition Height="150*" />
        </Grid.RowDefinitions>

        <!-- Grid contenant les Graphiques -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="350*" />
            </Grid.ColumnDefinitions>

            <!-- Graphique des Ventes -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*" />
                    <RowDefinition Height="250*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" />

                <!-- GRAPHIQUE VENTES Grid.Row="1" -->

            </Grid>

            <!-- Graphiques : Boutons -->
            <Grid Grid.Column="1"></Grid>

            <!-- Graphique des Locations -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*" />
                    <RowDefinition Height="250*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" />

                <!-- GRAPHIQUE VENTES Grid.Row="1" -->                
                
            </Grid>

        </Grid>

        <!-- Grid affichant les données numériques -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400*" />
                <ColumnDefinition Width="400*" />
            </Grid.ColumnDefinitions>

            <!-- Chiffres actuels -->
            <Grid Grid.Column="0">

                <StackPanel Orientation="Vertical">

                    <!-- Chiffres actuels concernant les ventes -->
                    <StackPanel Orientation="Vertical">

                        <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                            <TextBlock Text="Nombre de biens à la vente actuellement :"/>
                            <TextBlock Text="{Binding CurrentSales.count}"/>
                        </StackPanel>

                        <ListView ItemsSource="{Binding CurrentSales}">

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">

                                        <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                                            <TextBlock Text="Maisons (HOUSE) : "/>
                                            <TextBlock Text="{Binding Houses}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                                            <TextBlock Text="Appartements (FLAT) : "/>
                                            <TextBlock Text="{Binding Flats}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                                            <TextBlock Text="Champs (Fields) : "/>
                                            <TextBlock Text="{Binding Fields}"/>
                                        </StackPanel>
                                        
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            
                        </ListView>

                    </StackPanel>
                    
                    <!-- Chiffres actuels concernant les locations -->
                    <StackPanel Orientation="Vertical">

                            <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                                <TextBlock Text="Nombre de biens à la location actuellement :"/>
                                <TextBlock Text="{Binding CountToRent}"/>
                        </StackPanel>

                        <ListView ItemsSource="{Binding CurrentRentals}">

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">

                                        <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                                            <TextBlock Text="Maisons (HOUSE) : "/>
                                            <TextBlock Text="{Binding Houses}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                                            <TextBlock Text="Appartements (FLAT) : "/>
                                            <TextBlock Text="{Binding Flats}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Style="{StaticResource CountLine}">
                                            <TextBlock Text="Champs (Fields) : "/>
                                            <TextBlock Text="{Binding Fields}"/>
                                        </StackPanel>

                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ListView>

                    </StackPanel>

                    </StackPanel>
                
            </Grid>

            <!-- Tableau des chiffres -->
            <Grid Grid.Column="2">
                
                

            </Grid>

        </Grid>



    </Grid>
</Page>
